---
# This is a TEMPLATE file for a SealedSecret
# To create your own sealed secret:
#
# 1. Install kubeseal CLI:
#    brew install kubeseal
#
# 2. Create a temporary secret file with your API key:
#    cat <<EOF > /tmp/openai-secret.yaml
#    apiVersion: v1
#    kind: Secret
#    metadata:
#      name: start-renovate-openai-secret
#      namespace: default
#    type: Opaque
#    stringData:
#      openai.api-key: "sk-your-actual-openai-api-key-here"
#    EOF
#
# 3. Seal the secret (replace with your cluster details):
#    kubeseal --format yaml < /tmp/openai-secret.yaml > helm/sealed-openai-secret.yaml
#
# 4. Clean up the temporary file:
#    rm /tmp/openai-secret.yaml
#
# 5. Apply the sealed secret:
#    kubectl apply -f helm/sealed-openai-secret.yaml
#
# The sealed secret can be safely committed to git, while the original secret should never be committed.

apiVersion: bitnami.com/v1alpha1
kind: SealedSecret
metadata:
  name: start-renovate-openai-secret
  namespace: default
spec:
  encryptedData:
    openai.api-key: ENCRYPTED_VALUE_WILL_BE_HERE_AFTER_SEALING
  template:
    metadata:
      name: start-renovate-openai-secret
      namespace: default
    type: Opaque
